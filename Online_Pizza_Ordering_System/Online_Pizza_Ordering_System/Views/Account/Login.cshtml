@model Online_Pizza_Ordering_System.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<br />
<br />
<br />
<br />
<br />
<div class="container-fluid">
<h2>Please log in here.</h2>

<form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
    <h4>Enter your details below</h4>
    <hr />
   @* <input type="hidden" asp-for="ReturnUrl" />*@
@*<div asp-validation-summary="All" class="text-danger"></div>*@

    <div class="form-group">
        <label asp-for="UserName" class="col-md-4 control-label"></label>
        <div class="col-md-4">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Password" class="col-md-4 control-label"></label>
        <div class="col-md-4">
        
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-4">
            <div class="button">
                <input type="submit" class="btn btn-primary" value="Log in"/>&nbsp; &nbsp;
            <a class="btn btn-primary" asp-controller="Account" asp-action="Register"><i class="bi bi-file-person-fill"></i>Register</a>
        </div>
    </div>
</form>
</div>

